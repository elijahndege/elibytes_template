{
  "name": "elibytes-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "eslint:check": "eslint \"{src,test}/**/*.ts\"",
    "eslint:fix": "npm run eslint:check -- --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "npm run eslint:check && npm run prettier:check",
    "precommit": "lint-staged && npm run lint",
    "prepare": "husky install",
    "prettier:check": "prettier --check ./**/*.ts",
    "prettier:write": "prettier --write ./**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:migrate": "npm run build && npm run typeorm -- migration:run",
    "db:show": "npm run typeorm -- migration:show",
    "db:revert": "npm run typeorm -- migration:revert",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f ormconfig.ts",
    "migration:create": " npm run typeorm -- migration:create  -d  src/database/migrations -n",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/migrations  -n"
  },
  "dependencies": {
    "@casl/ability": "^5.4.4",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/bull": "^0.6.0",
    "@nestjs/common": "^9.0.4",
    "@nestjs/core": "^9.0.4",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "^1.1.0",
    "@nestjs/microservices": "^9.0.4",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.4",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/terminus": "^9.0.0",
    "@nestjs/throttler": "^3.0.0",
    "@nestjs/typeorm": "^9.0.0-next.2",
    "bcrypt": "^5.0.1",
    "bull": "^4.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.1",
    "helmet": "^5.1.0",
    "ioredis": "^5.2.1",
    "joiful": "^3.0.2",
    "nestjs-throttler-storage-redis": "^0.1.20",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.4",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^3.15.8",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}